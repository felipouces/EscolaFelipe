@{
    ViewData["Title"] = "Bem-vindo à EscolaFelipe";
}

<!-- ======== SEÇÃO PRINCIPAL ======== -->
<div class="container mt-5 text-center">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h1 class="display-4 mb-4">🚀 Bem-vindo à Escola Felipe</h1>
            <p class="lead mb-4">
                Aprenda <strong>linguagens de programação</strong> e construa o seu futuro em tecnologia.
            </p>

            <!-- Imagem ilustrativa -->
            <div class="mb-4">
                <img src="~/images/programming-banner.jpg"
                     alt="Programação na Escola Felipe"
                     class="img-fluid rounded shadow"
                     style="max-height: 350px; object-fit: cover;">
            </div>

            <!-- Botão principal -->
            <a class="btn btn-primary btn-lg mt-3" asp-controller="Account" asp-action="Register">
                Começar Agora
            </a>
        </div>
    </div>
</div>

<!-- ======== FOOTER MODERNO ======== -->
<footer class="mt-5 py-4 bg-dark text-light text-center">
    <div class="container">
        <p class="mb-2">
            &copy; @DateTime.Now.Year - <strong>Escola Felipe</strong> | Formação em Programação e Tecnologia
        </p>

        <!-- Redes sociais -->
        <div class="mb-2">
            <a href="https://github.com/felipouces/EscolaFelipe" class="text-light mx-2" target="_blank" title="GitHub">
                <i class="fab fa-github fa-lg"></i>
            </a>
            <a href="https://www.linkedin.com/in/felipe-sales-870b44248/" class="text-light mx-2" target="_blank" title="LinkedIn">
                <i class="fab fa-linkedin fa-lg"></i>
            </a>
            <a href="https://www.instagram.com/fel1pegs/" class="text-light mx-2" target="_blank" title="Instagram">
                <i class="fab fa-instagram fa-lg"></i>
            </a>
        </div>

        <p class="small mb-0">
            <a href="mailto:contato@escolafelipe.com" class="text-light text-decoration-none">
                contato@escolafelipe.com
            </a> |
            <a href="#" class="text-light text-decoration-none">Política de Privacidade</a>
        </p>
    </div>
</footer>

<!-- ======== FONT AWESOME ======== -->
@section Scripts {
    <script src="https://kit.fontawesome.com/a2e0e6c48b.js" crossorigin="anonymous"></script>
}


