@model EscolaFelipe.Web.Models.Disciplina

@{
    ViewData["Title"] = "Editar Disciplina";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h1 class="card-title">Editar Disciplina</h1>
                </div>
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="DisciplinaId" />

                        <div class="form-group mb-3">
                            <label asp-for="Nome" class="form-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Descricao" class="form-label"></label>
                            <textarea asp-for="Descricao" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Descricao" class="text-danger"></span>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="DuracaoHoras" class="form-label"></label>
                                    <input asp-for="DuracaoHoras" class="form-control" />
                                    <span asp-validation-for="DuracaoHoras" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group mb-3">
                                    <label asp-for="Preco" class="form-label"></label>
                                    <input asp-for="Preco" class="form-control" />
                                    <span asp-validation-for="Preco" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="form-group form-check mb-3">
                            <input asp-for="Ativo" class="form-check-input" />
                            <label asp-for="Ativo" class="form-check-label"></label>
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-warning">Atualizar Disciplina</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

