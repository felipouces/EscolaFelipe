@model IEnumerable<EscolaFelipe.Web.Models.Inscricao>

@{
    ViewData["Title"] = "Inscrições";
}

<h1>@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (User.IsInRole("Administrador") || User.IsInRole("Funcionario"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Nova Inscrição</a>
    </p>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h4>Nenhuma inscrição encontrada</h4>
        <p>Não existem inscrições registadas no sistema.</p>
        @if (User.IsInRole("Administrador") || User.IsInRole("Funcionario"))
        {
            <a asp-action="Create" class="btn btn-primary">Criar Primeira Inscrição</a>
        }
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Aluno</th>
                <th>Disciplina</th>
                <th>Data de Inscrição</th>
                <th>Estado</th>
                <th>Funcionário</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Aluno.Nome</td>
                    <td>@item.Disciplina.Nome</td>
                    <td>@item.DataInscricao.ToString("dd/MM/yyyy")</td>
                    <td>
                        @if (item.Estado == "Ativa")
                        {
                            <span class="badge bg-success">@item.Estado</span>
                        }
                        else if (item.Estado == "Concluída")
                        {
                            <span class="badge bg-primary">@item.Estado</span>
                        }
                        else
                        {
                            <span class="badge bg-warning">@item.Estado</span>
                        }
                    </td>
                    <td>@item.ApplicationUser?.Nome</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.InscricaoId" class="btn btn-info btn-sm">Detalhes</a>
                            @if (User.IsInRole("Administrador") || User.IsInRole("Funcionario"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.InscricaoId" class="btn btn-warning btn-sm">Editar</a>
                                <a asp-action="Delete" asp-route-id="@item.InscricaoId" class="btn btn-danger btn-sm">Eliminar</a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


