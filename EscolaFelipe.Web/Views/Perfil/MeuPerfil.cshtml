@model EscolaFelipe.Web.ViewModels.PerfilViewModel

@{
    ViewData["Title"] = "Meu Perfil";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h1 class="card-title">Meu Perfil</h1>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="row">
                        <!-- Coluna da Foto -->
                        <div class="col-md-4 text-center mb-4">
                            <div class="card">
                                <div class="card-body">
                                    @if (!string.IsNullOrEmpty(Model.FotoPerfil))
                                    {
                                        <img src="@Model.FotoPerfil" class="img-fluid rounded-circle mb-3"
                                             style="width: 150px; height: 150px; object-fit: cover;"
                                             alt="Foto de Perfil" />
                                        <br />
                                        <form asp-action="RemoverFoto" method="post" class="d-inline">
                                            <button type="submit" class="btn btn-danger btn-sm"
                                                    onclick="return confirm('Tem a certeza que deseja remover a foto de perfil?')">
                                                Remover Foto
                                            </button>
                                        </form>
                                    }
                                    else
                                    {
                                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center mx-auto mb-3"
                                             style="width: 150px; height: 150px;">
                                            <i class="fas fa-user fa-3x text-muted"></i>
                                        </div>
                                        <p class="text-muted">Sem foto de perfil</p>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Coluna do Formulário -->
                        <div class="col-md-8">
                            <form asp-action="MeuPerfil" enctype="multipart/form-data">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                <!-- Campo de Upload de Foto -->
                                <div class="form-group mb-3">
                                    <label asp-for="FotoFile" class="form-label">Alterar Foto de Perfil</label>
                                    <input asp-for="FotoFile" class="form-control" type="file"
                                           accept=".jpg,.jpeg,.png,.gif" />
                                    <span asp-validation-for="FotoFile" class="text-danger"></span>
                                    <small class="form-text text-muted">
                                        Formatos permitidos: JPG, JPEG, PNG, GIF. Tamanho máximo: 5MB.
                                    </small>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Nome" class="form-label"></label>
                                    <input asp-for="Nome" class="form-control" />
                                    <span asp-validation-for="Nome" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control" readonly />
                                    <small class="form-text text-muted">O email não pode ser alterado.</small>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Morada" class="form-label"></label>
                                    <input asp-for="Morada" class="form-control" />
                                    <span asp-validation-for="Morada" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="DataNascimento" class="form-label"></label>
                                    <input asp-for="DataNascimento" type="date" class="form-control" />
                                    <span asp-validation-for="DataNascimento" class="text-danger"></span>
                                </div>

                                <div class="form-group mb-3">
                                    <label asp-for="Telefone" class="form-label"></label>
                                    <input asp-for="Telefone" class="form-control" />
                                    <span asp-validation-for="Telefone" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <button type="submit" class="btn btn-success">Atualizar Perfil</button>

                                    @if (User.IsInRole("Aluno"))
                                    {
                                        <a asp-action="MinhasInscricoes" class="btn btn-info">Ver Minhas Inscrições</a>
                                    }
                                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Voltar ao Início</a>
                                </div>
                            </form>
                        </div>
                    </div>

                    <!-- Informações do Aluno (apenas para alunos) -->
                    @if (User.IsInRole("Aluno") && Model.Aluno != null)
                    {
                        <div class="mt-4">
                            <div class="alert alert-info">
                                <h5>Informações Académicas</h5>
                                <p><strong>Data de Inscrição:</strong> @Model.Aluno.DataInscricao.ToString("dd/MM/yyyy")</p>
                                <p>
                                    <strong>Número de Inscrições Ativas:</strong>
                                    @{
                                        // Aqui podemos adicionar lógica para contar inscrições ativas
                                    }
                                </p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <!-- Adicione Font Awesome para o ícone de utilizador -->
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}
