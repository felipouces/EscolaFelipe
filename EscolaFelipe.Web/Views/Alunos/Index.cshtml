@model IEnumerable<EscolaFelipe.Web.Models.Aluno>

@{
    ViewData["Title"] = "Alunos";
}

<h1>Lista de Alunos</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (User.IsInRole("Administrador") || User.IsInRole("Funcionario"))
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Novo Aluno</a>
    </p>
}

@if (!Model.Any())
{
    <div class="alert alert-info">
        <h4>Nenhum aluno encontrado</h4>
        <p>Não existem alunos registados no sistema.</p>
        @if (User.IsInRole("Administrador") || User.IsInRole("Funcionario"))
        {
            <a asp-action="Create" class="btn btn-primary">Adicionar Primeiro Aluno</a>
        }
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>Nome</th>
                <th>Email</th>
                <th>Telefone</th>
                <th>Data Nascimento</th>
                <th>Data Inscrição</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                    <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                    <td>@item.DataNascimento.ToString("dd/MM/yyyy")</td>
                    <td>@item.DataInscricao.ToString("dd/MM/yyyy")</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-action="Details" asp-route-id="@item.AlunoId" class="btn btn-info btn-sm">Detalhes</a>
                            @if (User.IsInRole("Administrador") || User.IsInRole("Funcionario"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.AlunoId" class="btn btn-warning btn-sm">Editar</a>
                            }
                            @if (User.IsInRole("Administrador"))
                            {
                                <a asp-action="Delete" asp-route-id="@item.AlunoId" class="btn btn-danger btn-sm">Eliminar</a>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

