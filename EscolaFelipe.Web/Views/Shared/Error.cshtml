@model EscolaFelipe.Web.Models.ErrorViewModel

@{
    ViewData["Title"] = Model?.Title ?? "Erro";
}

<div class="container mt-5">
    <div class="alert alert-danger text-center">
        <h1 class="display-5 text-danger">@ViewData["Title"]</h1>
        <p class="lead">@Model?.Message</p>

        @if (Model?.ShowRequestId == true)
        {
            <p><strong>Request ID:</strong> <code>@Model.RequestId</code></p>
        }

        <hr />
        <p><a class="btn btn-primary" asp-controller="Home" asp-action="Index">Voltar à Página Inicial</a></p>
    </div>
</div>

